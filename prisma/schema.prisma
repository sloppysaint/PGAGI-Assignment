datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  image       String?
  preferences String? @default("[]")
  favorites   Favorite[] // <-- Add this relation
}
model Favorite {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  itemId    String
  type      String
  data      Json?     // <--- ADD THIS LINE
  createdAt DateTime @default(now())
  @@unique([userId, itemId, type])
}
